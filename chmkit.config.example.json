{
  "default": {
    "logLevel": "info",
    "tempDir": "./temp",
    "maxMemory": 104857600
  },
  "lzx": {
    "windowSize": 32768,
    "resetInterval": 32768,
    "compressionLevel": 6
  },
  "format": {
    "itsfSignature": "ITSF",
    "itsfVersion": 3,
    "itspSignature": "ITSP",
    "itspVersion": 1,
    "lzxcSignature": "LZXC",
    "lzxcVersion": 2,
    "defaultFiles": {
      "toc": "Table of Contents.hhc",
      "index": "Index.hhk",
      "project": "Project.hhp"
    },
    "supportedExtensions": [
      ".html",
      ".htm",
      ".css",
      ".js",
      ".json",
      ".png",
      ".jpg",
      ".jpeg",
      ".gif",
      ".svg",
      ".ico",
      ".xml",
      ".txt",
      ".md"
    ]
  },
  "cli": {
    "defaultOutputDir": "./output",
    "defaultOutputFile": "./output.chm",
    "defaultTempDir": "./temp",
    "maxConcurrency": 4,
    "showProgress": true,
    "colorOutput": true
  },
  "performance": {
    "chunkSize": 32768,
    "bufferSize": 65536,
    "maxFileSize": 524288000,
    "compressionThreshold": 1024
  },
  "validation": {
    "validateHeaders": true,
    "validateChecksums": true,
    "strictMode": false,
    "allowMissingFiles": false
  }
} 